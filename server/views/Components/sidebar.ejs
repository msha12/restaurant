<div
        id="sidebarId"
        class="small-sidebar position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar"
      >
        <span style="right: 10px; top: 15px" class="position-absolute">
          <button class="btn" onclick="toggleSidebar()">
            <i  class="bi bi-x-circle"></i>
          </button>
        </span>

        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="bi bi-lightning-charge"></i>
          <span class="fs-4 sidebar-text">Zigzag</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item pt-2">
            <a href="/home" class="nav-link  text-white <%= currentPage === "home" ? "active" : null %> " aria-current="page">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#home" />
              </svg>
              <span class="sidebar-text"> Home </span>
            </a>
          </li>

          <li class="nav-item pt-2">
            <a href="/menu" class="nav-link text-white <%= currentPage === "ourMenu" ? "active" : null %> ">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text"> Our Menu </span>
            </a>
          </li>

          <li class="nav-item pt-2">
            <a href="/reservation" class="nav-link text-white <%= currentPage === "ourReservation" ? "active" : null %> ">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text">Reservations </span>
            </a>
          </li>
          <li class="nav-item pt-2">
            <a href="/package" class="nav-link text-white <%= currentPage === "ourPackage" ? "active" : null %> ">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text">Packages </span>
            </a>
          </li>
          <% if (user.role === 'admin') { %>
              <li class="nav-item pt-2">
                <a href="/chef" class="nav-link text-white <%= currentPage === "ourChefs" ? "active" : null %> ">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#people-circle" />
                  </svg>
                  <span class="sidebar-text"> Our Chefs </span>
                </a>
              </li>
              <li class="nav-item pt-2">
                <a href="/user" class="nav-link text-white <%= currentPage === "users" ? "active" : null %> ">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#people-circle" />
                  </svg>
                  <span class="sidebar-text">Users </span>
                </a>
              </li>
          <% } %>
        </ul>
        <hr />
        <div class="dropdown">
          <a
            href="#"
            class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="/images/me.JPG"
              alt=""
              width="32"
              height="32"
              class="rounded-circle me-2"
            />
            <strong class="sidebar-text"><%= user.username %></strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="/logout">Sign out</a></li>
          </ul>
        </div>
      </div>

      <div class="b-example-divider b-example-vr"></div>