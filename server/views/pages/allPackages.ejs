<div class="mt-5 ms-3">
  <a href="./package/add" class="btn btn-success px-4 py-2 fw-bold shadow-sm d-flex align-items-center" style="width: fit-content;">
    <i class="bi bi-plus-circle me-2"></i>
    <span>Add New Package</span>
  </a>
</div>

<div class="container mt-4">
  <table class="table table-striped table-bordered text-center align-middle shadow-sm" style="width: 95%;">
    <thead class="table-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Details</th>
        <th scope="col">Image</th>
        <th scope="col">Active</th>
        <th scope="col">From</th>
        <th scope="col">To</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% allPackages.forEach((item, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= item.title %></td>
          <td><%= item.details %></td>
          <td>
            <img src="/uploads/<%= item.image %>" alt="package" style="width: 80px; height: 80px; object-fit: cover;">
          </td>
          <td>
            <span class="badge <%= item.isActive ? 'bg-success' : 'bg-danger' %>">
              <%= item.isActive ? 'Yes' : 'No' %>
            </span>
          </td>
          <td><%= item.fromDate.toDateString() %></td>
          <td><%= item.toDate.toDateString() %></td>
          <td>
            <a href="/package/edit/<%= item._id %>" 
               class="btn btn-outline-warning btn-sm me-1" 
               data-bs-toggle="tooltip" 
               data-bs-title="Edit Package">
              <i class="bi bi-pencil"></i>
            </a>

            <form action="/package/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

