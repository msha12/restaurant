<div class="container mt-5">
  <h2 class="mb-4 fw-bold text-primary">Add Reservation</h2>

  <form action="/reservation/add" method="POST" class="p-4 rounded shadow-sm">

    <div class="mb-4">
      <label for="name" class="form-label">Full Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter full name" required>
    </div>

    <div class="mb-4">
      <label for="phone" class="form-label">Phone Number</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter phone number" required>
    </div>

    <div class="mb-4">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" id="date" name="date" required>
    </div>

    <div class="mb-4">
      <label for="time" class="form-label">Time</label>
      <input type="time" class="form-control" id="time" name="time" required>
    </div>

    <div class="mb-4">
      <label for="peopleCount" class="form-label">Number of People</label>
      <input type="number" class="form-control" id="peopleCount" name="peopleCount" placeholder="Enter number of people" required min="1">
    </div>

    <div class="mb-4">
      <label for="notes" class="form-label">Notes</label>
      <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Any special request"></textarea>
    </div>

    <div class="mb-4">
      <label for="status" class="form-label">Status</label>
      <select class="form-select" id="status" name="status" required>
        <option value="pending" selected>Pending</option>
        <option value="confirmed">Confirmed</option>
        <option value="cancelled">Cancelled</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary px-4 py-2 fw-bold">
      <i class="bi bi-plus-circle me-2"></i> Save Reservation
    </button>

  </form>
</div>
