<div class="mt-5 ms-3">
  <a href="./user/add" class="btn btn-success px-4 py-2 fw-bold shadow-sm d-flex align-items-center" style="width: fit-content;">
    <i class="bi bi-plus-circle me-2"></i>
    <span>Add New User</span>
  </a>
</div>

<div class="container mt-4">
  <table class="table table-striped table-bordered text-center align-middle shadow-sm" style="width: 95%;">
    <thead  class="table-dark">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <a href="/user/edit/<%= user._id %>" 
               class="btn btn-outline-warning btn-sm me-1" 
               data-bs-toggle="tooltip" 
               data-bs-title="Edit Package">
              <i class="bi bi-pencil"></i>
            </a>

            <form action="/user/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
